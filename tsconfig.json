{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "domains/*": ["./src/domains/*"],
      "components/*": ["./src/components/*"],
      "shared/*": ["./src/shared/*"]
    },
  },
  "include": ["./**/*"],
  "exclude": ["./node_modules/**/*", "./dist"]
}
